{{> html}}
  {{> header}}
  <div class="transparent-overlay">
    <!-- About -->
    <section id="banner">
        <header>
            <img class="profile" src="/images/profile.jpg" />
            <h2 id="intro">Hi, my name is <strong>Mike</strong>.</h2>
        </header>
        <p>I am a <strong>full-stack JavaScript engineer</strong> in San Francisco.</p>
        <h3><a href="/about/">Read more about me &rarr;</a></h3>
        <br />
        <p><em>Here are some of my favorite tools:</em></p>
        <section class="tools">
            <div class="row">
                <div class="4u">
                  <img src="http://i2.wp.com/upload.wikimedia.org/wikipedia/commons/thumb/6/6a/JavaScript-logo.png/768px-JavaScript-logo.png?resize=150%2C150" />
                </div>
                <div class="4u">
                  <img src="http://www.codersgrid.com/wp-content/uploads/2013/05/nodejs-image-processing.png" />
                </div>
                <div class="4u">
                  <img src="http://i1.wp.com/rubyonrails.org/images/rails.png?resize=87%2C111" />
                </div>
            </div>
            <div class="row">
                <div class="4u">
                  <img src="http://i1.wp.com/kadamwhite.github.io/talks/2012/backbone-and-underscore/images/backbone.png?resize=200%2C200" />
                </div>
                <div class="4u">
                  <img src="http://i2.wp.com/gruntjs.com/img/grunt-logo.png?w=175" />
                </div>
                <div class="4u">
                  <img src="http://i2.wp.com/learnboost.github.io/stylus/assets/stylus.png?w=200" />
                </div>
            </div>
        </section>
        <footer>
            <a href="#first" class="button style2 scrolly">Check out my lastest posts &darr;</a>
        </footer>
    </section>

    <!-- Blog Header -->
    <article class="container box style2">
        <header>
            <h2>I Write</h2>
            <p>Code + words</p>
        </header>
    </article>

    {{{featured articles}}}

    <!-- Blog Link -->
    <article id="blog-box" class="container box style2">
        <div class="inner">
            <a href="/blog/">
                <header>
                    <p>For more articles</p>
                    <h2><a href="/blog/">Visit my blog &rarr;</a></h2>
                </header>
            </a>
        </div>
    </article>

    <!-- Contact -->
    <article class="container box style3">
        <header id="contact">
            <h2>Get in touch</h2>
            <p>Send me a message & I'll get back to you right away.</p>
        </header>
        <header id="contact-error">
            <h2>Oops</h2>
            <p>There was a problem submitting your message.<br />Please make sure to fill out all three fields and try again.</p>
        </header>
        <form id="email" method="POST" action="https://secure.mailjol.net/allforms/u/6b72b16a.php">
            <div class="row half">
                <div class="6u"><input type="text" class="text" name="name" placeholder="Name" /></div>
                <div class="6u"><input type="email" class="text" name="email" placeholder="Email" /></div>
            </div>
            <div class="row half">
                <div class="12u">
                    <textarea name="message" placeholder="Message"></textarea>
                </div>
            </div>
            <div class="row">
                <div class="12u">
                    <ul class="actions">
                        <li><a href="#" class="button form">Send Message</a></li>
                    </ul>
                </div>
            </div>
        </form>
    </article>

    {{> footer}}
  </div> <!-- .transparent-overlay -->
{{> close}}