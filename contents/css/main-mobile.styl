@import 'nib'
@import 'variables'
@import 'mixins'

.mobile-background
  tree-background();
  max-width: 640px;
  overflow: hidden;
  width: 100%;
  height: 125%;
  position: fixed;
  z-index: -1;

*
  text-shadow: none !important;
  transition: none !important;

html, body
  width: 100%;
  min-height: 100%;

body
  background-color: $black;

body,input,textarea,select
  line-height: 1.5em;
  font-size: 12pt;
  letter-spacing: 0;

h2, h3, h4, h5, h6
  font-size: 1em;

h2
  font-size: 1.25em;
  letter-spacing: 4px;


/* Lists */

ul.default
  li
    padding-left: 0.5em;

ul.icons
  a
    width: 2em;
    height: 2em;
    line-height: 2em;

ul.menu
  padding-bottom: 1em;
  li
    display: block;
    padding: 0;
    border: 0;
    margin: 1em 0 0 0;
    &:first-child
      margin-top: 0;


ul.actions
  li
    display: block;
  &:first-child
    margin-top: 0;

ol.default
  li
    padding-left: 0.25em;

/* Buttons */

.button
  padding: 0.75em 0;
  width: 100%;
  max-width: 320px;

/* Box */

.box
  margin-top: 4.5em;
  &:before
    width: 45px;
    height: 33px;
    top: -2.25em;
    margin-left: -22.5px;
    margin-top: -16.5px;
    background-size: 45px 33px;

.box.style1
  padding: 0;
  text-align: center;
  &:after
    top: -5em;
    height: 5em;
  .image
    display: inline;
    left: 0 !important;
    width: 100% !important;
    height: 50% !important;
    img
      position: relative;
      height: auto;
      width: 100%;
  .inner
    margin: 0 !important;
    padding: 15em 1.25em 3em !important;

.box.style2
  &:after
    top: -4.5em;
    height: 4.5em;
  .inner
    .row
      &:before
        display: none;
    .image
      padding: 0;
      max-width: 250px;
      margin: 0 auto 20px auto;

.box.style3
  padding: 2em 1.25em;
  &:after
    top: -5em;
    height: 5em;

/*********************************************************************************/
/* Header                                                                        */
/*********************************************************************************/

#header
  padding: 6em 0;
  .icons a
    font-size: 1.2em !important;
  nav
    ul
      li
        margin: 0 1.5em;
  header
    padding-left: 2em;
    padding-right: 2em;
    h1
      font-size: 1.75em;
      letter-spacing: 6px;
  footer
    bottom: 4.5em;
    padding: 0 2em;
    &:after
      bottom: -4.5em;
      left: 50%;
      height: 4.5em;
    &:before
      width: 45px;
      height: 33px;
      bottom: -2.25em;
      margin-left: -22.5px;
      margin-bottom: -16.5px;
      background-size: 45px 33px;

/*********************************************************************************/
/* Banner                                                                        */
/*********************************************************************************/

#banner
  padding: 3em 2em;
  background-size: auto 150%;
  header
    margin: 0 0 1em 0;
    h2
      font-size: 1.5em;
      letter-spacing: 6px;
    img.profile
      margin: 0;
  .row
    img
      max-height: 3.5em;

/*********************************************************************************/
/* Footer                                                                        */
/*********************************************************************************/

#footer
  .copyright
    font-size: 0.8em;
  .about
    column-count: 1 !important;
    -webkit-column-count: 1 !important;
    -moz-column-count: 1 !important;
    column-width: 100% !important;

#post
  .box.style3
    margin-top: 5em;
