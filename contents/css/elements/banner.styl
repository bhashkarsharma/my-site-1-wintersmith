#banner
  position: relative;
  color: $white;
  text-shadow: 0 0 0.5px $white-25;
  text-align: center;
  font-size: 1.1em;
  background: #00a0a0 url('../images/banner.svg') bottom center no-repeat;
  padding: 5em 0;
  margin: 0;
  background-size: 125% auto;
  transition: background-color 0.35s ease-in-out;

  .button
    color: $button-color;
    text-shadow: 0 0 0.5px $button-hover-color-25;

  .row
    font-size: 90px;
    color: #F0DB4F;
    margin: 30px 0;
    img
      max-height: 100px;
      vertical-align: bottom;

  header
    margin: 0 0 2em 0;
    img.profile
      max-height: 10em;
      border-radius: 50%;
      margin: -1em 3em 0.1em;
    h2
      font-weight: 400;
      font-size: 1.75em;
      letter-spacing: 8px;
      overflow: hidden;
  footer
    margin: 2em 0 0 0;

  p
    margin: 0;
  a
    color: inherit;
    border-bottom-color: $white-50;
    &:hover
      border-bottom-color: $clear;

.about-me-hover
  background-color: $black-50 !important;
