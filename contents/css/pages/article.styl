#post, #page
  p
    img
      max-width: 100%
      height: auto;
      margin: 0 auto;
      display: block;
  :not(pre) > code
    background-color: $code-bg;
    color: $code-text;
    font-style: italic;
    padding: 0.2em 0.4em;
    border-radius: 2px;
  #page-header
    background: $black;
    background: $black-40;
  .box.style3
    margin-top: 9.5em;
    ul,
    ol
      padding-left: 2em;
      li
        padding-left: 0.65em;
        margin-top: 0.5em;
        &:first-child
          margin-top: 0;
    ul
      list-style: disc;
    ol
      list-style: decimal;
    .video-box
      position: relative;
      padding-bottom: 56.25%; /* 16:9 */
      padding-top: 25px;
      height: 0;
      iframe
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;

#page
  background: $burnt-orange;
  background: linear-gradient(top, $burnt-orange-93, $black-80);
  background: $black-80;

#footer
  .article-footer-bg-overlay
      background: $black;
      background: $black-80;
      padding-top: 1em;
