pseudo-arrow-before()
  &:before
    content: '';
    display: block;
    width: 90px;
    height: 66px;
    position: absolute;
    left: 50%;
    top: -4.5em;
    margin-left: -45px;
    margin-top: -33px;
    background: url('../images/arrow.svg') no-repeat;

pseudo-line-after(top=0, height=100%)
  &:after
    top: top;
    height: height;
    content: '';
    display: block;
    position: absolute;
    left: 50%;
    border-left: solid 1px #fff;
    z-index: 10;